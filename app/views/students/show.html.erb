<h1><%= "#{@student.branch}'s #{@student.first_name} #{@student.last_name}" %></h1>

<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>


<h3>Email: <%= "#{@student.email}" %></h3>

<h2>Cohort</h2>

<table>
	<thead>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
	</thead>
	<tbody>
		<% @cohort.each do |student| %>
		<tr>
			<td><%= student.first_name %></td>
			<td><%= student.last_name %></td>
            <td><%= student.email %></td>
            <td><a href="/students/<%= student.id %>">Show</a></td>
            <td><a href="/students/<%= student.id %>/edit">Edit</a></td>
            <td><a href="/students/<%= student.id %>" data-method = "delete">Destroy</a></td>
		</tr>
		<% end %>
	</tbody>
</table>
<a href="/dojos">Home</a>